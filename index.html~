<script>
  hash = window.location.hash.substr(1)
  cmd = ''
  if (hash.indexOf(':') !== -1)
    (cmd = hash.split(':')[1])
      && (hash = hash.split(':')[0])
  var imgify = function (name) {
    return 'img/' + name + '.png'
  }
  hash || (hash = 'input')
  document.getElementById('screen').src = imgify(hash)
  document.getElementById('controls').innerHTML = views[hash]

  if (cmd === 'menu') document.getElementById('controls')
    .innerHTML += menu
  if (hash === 'results1')
    document.getElementById('count').innerHTML
      = +cmd

</script>
